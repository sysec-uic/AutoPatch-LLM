{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "file_debug_handler": {
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "standard",
        "filename": "/app/log/autopatch.llm-dispatch.debug.log"
      },
      "console_err_handler": {
        "class": "logging.StreamHandler",
        "level": "ERROR",
        "formatter": "standard",
        "stream": "ext://sys.stderr"
      },
      "console_info_handler": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "standard",
        "stream": "ext://sys.stdout"
      }
    },
    "loggers": {
      "autopatch.llm-dispatch": {
        "handlers": ["file_debug_handler", "console_err_handler", "console_info_handler"],
        "level": "INFO",
        "propagate": false
      }
    }
  }
  